---
// Art Page

import Layout from "@layouts/Layout.astro";
import ArtList from "@components/content/artPosts.svelte";

// console.log("posts fetched", posts);
---

<Layout title="Hyceate's Arts Page" description="Hyceate's list of artworks."
  ><section class="inline-flex flex-col justify-center items-center">
    <hgroup class="flex justify-center flex-col items-center mt-10 mb-10">
      <h1 class="text-6xl mb-9 font-medium">art</h1>
    </hgroup>
    <ul id="artlist" class="flex flex-wrap max-w-6xl gap-2 justify-center">
      <ArtList client:only="svelte" />
    </ul>
  </section>
</Layout>
<style>
  #artlist {
    animation: 0.9s ease-out slideInFromBottom;
  }

  @keyframes slideInFromBottom {
    from {
      transform: translateY(20px) scale(0.95);
      opacity: 0;
    }
    to {
      transform: translateY(0) scale(1);
      opacity: 1;
    }
  }
</style>
