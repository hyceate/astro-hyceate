---
import { ViewTransitions, fade } from "astro:transitions";
import "@assets/css/app.css";
import "@assets/css/transitions.css";
import CommonHead from "@components/CommonHead.astro";
import Header from "@components/header.svelte";
import Headroom from "@components/headroom.svelte";
import { isReady } from "@lib/stores/stores";
import { get } from "svelte/store";
interface Props {
	title: string;
	description: string;
}

const { title, description } = Astro.props;
let pathname = Astro.url.pathname;
---

<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/hy_roundBG.svg" />
		<meta name="generator" content={Astro.generator} />
		<CommonHead title={title} description={description} />
		<ViewTransitions />
	</head>
	<body class="flex flex-col items-center">
		<div class="contents" transition:animate="none">
			<Headroom offset={10} tolerance={5} duration="350ms" client:load>
				<Header url={pathname} client:load />
			</Headroom>
		</div>
		<main class="flex flex-col items-center w-full h-full flex-1">
			<article
				id="doc"
				class="flex flex-1 flex-col w-dvw items-center px-5 lg:px-20 pt-5 pb-4 max-w-[81rem] mt-24 overflow-clip"
				style="display:none"
			>
				<slot />
			</article>
		</main>
		<!-- loader -->
		<aside
			id="loader"
			transition:persist
			class="invisible opacity-0 show fixed z-[999] flex justify-center items-center w-full h-dvh"
		>
			<div class="loader-wrapper z-20 animate-[spin_4s_linear_infinite]">
				<div class="loader"></div>
			</div>
			<div
				class="loader-wrapper z-20 animate-[spin_2s_linear_infinite] transform rotate-90"
			>
				<div class="loader"></div>
			</div>
			<div
				class="loader-wrapper z-20 animate-[spin_1s_linear_infinite] transform rotate-90"
			>
				<div class="loader"></div>
			</div>
			<div
				id="loader-bg"
				class="fixed overflow-hidden w-full h-dvh left-0 -top-0 bg-primary/80 backdrop-blur-sm z-[10]"
			>
			</div>
		</aside>
		<!-- end loader -->
		<style is:global>
			.show {
				visibility: visible;
				opacity: 1;
				transition: 1s all ease;
			}
			.loader-wrapper {
				width: 48px;
				height: 136px;
				position: absolute;
			}
			.loader {
				width: 45px;
				height: 48px;
				margin: 20px auto;
				box-sizing: border-box;
				border-radius: 50% 50% 50% 50% / 20% 20% 80% 80%;
				border: 1px solid #d63f3f;
				position: relative;
			}
			.loader::after {
				content: "";
				box-sizing: border-box;
				width: inherit;
				height: inherit;
				left: 0;
				bottom: 0;
				position: absolute;
				border-radius: inherit;
				box-sizing: border-box;
			}
			.loader::before {
				content: "";
				box-sizing: border-box;
				width: inherit;
				height: inherit;
				left: 0;
				top: 105%;
				position: absolute;
				transform: rotate(180deg);
				border-radius: inherit;
				border: inherit;
				box-sizing: border-box;
			}
		</style>
		<script>
			import { isReady } from "@lib/stores/stores";
			isReady.subscribe((ready) => {
				setTimeout(() => {
					if (ready) {
						document.getElementById("doc").style.display = "flex";
					} else {
						document.getElementById("doc").style.display = "none";
					}
				}, 100);
			});
		</script>
		<script src="@assets/js/transition.js"></script>
	</body>
</html>
