---
import "@assets/css/app.css";
import CommonHead from "@components/CommonHead.astro";
import Header from "@components/header.svelte";
import Loader from "@components/loader.svelte";
import Headroom from "@components/headroom.svelte";
interface Props {
	title: string;
	description: string;
}

const { title, description } = Astro.props;
let pathname = Astro.url.pathname;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/hy_roundBG.svg" />
		<meta name="generator" content={Astro.generator} />
		<CommonHead title={title} description={description} />
	</head>
	<body class="flex flex-col items-center">
		<aside
			id="loader"
			class="hidden fixed z-[999] flex justify-center items-center w-full h-dvh"
		>
			<div class="z-[20]"><Loader /></div>
			<div
				id="loader-bg"
				class="hidden fixed overflow-hidden w-full h-dvh left-0 -top-0 bg-primary/80 backdrop-blur-sm z-[10]"
			>
			</div>
		</aside>

		<Headroom offset={0} tolerance={5} duration="350ms" client:load>
			<Header url={pathname} client:load />
		</Headroom>
		<main class="flex flex-col items-center w-full min-h-full flex-1">
			<article
				id="swup"
				class="transition-fade flex flex-col w-dvw items-center px-5 lg:px-20 pt-5 mb-5 max-w-[81rem] mt-20"
			>
				<slot />
			</article>
		</main>
		<style is:global>
			html.is-changing .transition-fade {
				transition: opacity 1s;
				opacity: 1;
			}
			html.is-animating .transition-fade {
				opacity: 0;
			}
		</style>
		<script src="@assets/js/transition.js"></script>
	</body>
</html>
